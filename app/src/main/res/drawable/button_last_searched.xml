<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
    <shape>
        <solid
            android:color="#3a4e78f5" />
        <stroke
            android:width="1dp"
            android:color="#a8595757" />
        <corners
            android:radius="6dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#4ed7d7da"
                android:endColor="#4de9e9ef"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#30eff1fa" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>